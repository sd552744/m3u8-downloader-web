# 阶段1：构建前端产物
FROM node:20-alpine AS builder
WORKDIR /app

# 复制依赖文件
COPY package.json package-lock.json ./
RUN npm ci 

# 复制所有源码
COPY . .

# 执行打包命令生成dist（根据项目实际命令调整，如yarn build、pnpm build）
RUN npm run build  

# 阶段2：部署（可选，用轻量镜像）
FROM nginx:alpine
# 从构建阶段复制dist到nginx的默认静态目录
COPY --from=builder /app/dist /usr/share/nginx/html  

COPY nginx.conf /etc/nginx/conf.d/default.conf
# 暴露端口（根据docker-compose配置调整）
EXPOSE 60003

# 启动nginx
CMD ["nginx", "-g", "daemon off;"]
